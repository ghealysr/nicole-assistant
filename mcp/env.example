# =============================================================================
# Nicole MCP Bridge - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your API keys
# =============================================================================

# -----------------------------------------------------------------------------
# BRAVE SEARCH
# Get your API key at: https://brave.com/search/api/
# -----------------------------------------------------------------------------
BRAVE_API_KEY=your_brave_api_key_here

# -----------------------------------------------------------------------------
# NOTION
# Create an integration at: https://www.notion.so/my-integrations
# -----------------------------------------------------------------------------
NOTION_API_KEY=your_notion_integration_token_here

# -----------------------------------------------------------------------------
# RECRAFT (Image Generation)
# Get your API key at: https://www.recraft.ai/
# -----------------------------------------------------------------------------
RECRAFT_API_KEY=your_recraft_api_key_here

# -----------------------------------------------------------------------------
# GITHUB
# Create a personal access token at: https://github.com/settings/tokens
# Required scopes: repo, workflow
# -----------------------------------------------------------------------------
GITHUB_TOKEN=your_github_personal_access_token_here
# Optional: Specify organization (leave empty for personal repos)
GITHUB_ORG=

# -----------------------------------------------------------------------------
# VERCEL
# Create a token at: https://vercel.com/account/tokens
# -----------------------------------------------------------------------------
VERCEL_TOKEN=your_vercel_token_here
# Optional: Team ID for team deployments
VERCEL_TEAM_ID=

# -----------------------------------------------------------------------------
# GOOGLE (Gmail, Calendar, Drive)
# Set up OAuth at: https://console.cloud.google.com/apis/credentials
# 
# Steps:
# 1. Create a project in Google Cloud Console
# 2. Enable Gmail API and Google Calendar API
# 3. Create OAuth 2.0 credentials (Desktop app)
# 4. Download client_secret.json
# 5. Use the token generator script to get refresh tokens
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret

# Primary Gmail account
GOOGLE_REFRESH_TOKEN=your_refresh_token_for_account_1

# Additional Gmail accounts (optional)
GOOGLE_REFRESH_TOKEN_2=your_refresh_token_for_account_2
GOOGLE_REFRESH_TOKEN_3=your_refresh_token_for_account_3

# -----------------------------------------------------------------------------
# SERVER CONFIG
# -----------------------------------------------------------------------------
PORT=3100
